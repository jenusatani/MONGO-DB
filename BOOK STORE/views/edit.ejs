        opacity: 1;
        transform: translateY(0);
    }
}
    </style>
<body>
    <nav class="navbar">
        <div class="logo">BOOK STORE</div>
        <ul class="nav-links">
          <li><a href="">Home</a></li>
          <li><a href="">About</a></li>
          <li><a href="">Categories</a></li>
          <li><a href="">Blog</a></li>
          <li><a href="">Contact</a></li>
        </ul>
    </nav>
    <h1>Edit Book Details</h1>
    <form action="/updatedata" method="post">
        <input type="text" name="id" id="id" value="<%= singledata.id %>" hidden>
        <input type="text" placeholder="Name" name="name" required value="<%= singledata.name %>">
        <input type="text" placeholder="Author" name="Author" required value="<%= singledata.Author %>">
        <input type="text" placeholder="Price" name="Price" required value="<%= singledata.Price %>">
        <input type="date" placeholder="Published Date" name="Date" required value="<%= singledata.Date %>">
        <input type="text" placeholder="Image URL" name="image" required value="<%= singledata.image %>">

        <button type="submit">Update Data</button>
    </form>
</body>

</html>
